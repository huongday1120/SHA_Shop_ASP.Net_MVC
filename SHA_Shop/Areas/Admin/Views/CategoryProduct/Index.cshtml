@model List<SHA_Shop.Models.DANHMUC>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">QUẢN LÝ SẢN PHẨM</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DANH MỤC SẢN PHẨM</h6>
        </div>

        <br />
        <!-- Topbar Search -->
        @using (Html.BeginForm("Index", "CategoryProduct", FormMethod.Get, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" })) //<form class='user'>
        {
                <div class="input-group">
                    <input value="@ViewBag.searchkey" name="searchkey" type="text" class="form-control bg-light border-0 small" placeholder="Tìm kiếm..."
                           aria-label="Search" aria-describedby="basic-addon2">

                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                        <a type="button" style="margin-left:50px;" class="btn btn-warning" href="@Url.Action("Create","CategoryProduct")">Thêm Mới Danh Mục</a>
                    </div>
                </div>
           }

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã danh mục</th>
                                <th>Tên danh mục</th>
                                <th>Ngày tạo</th>
                                <th colspan="2" style="text-align:center;">Tùy chỉnh</th>
                            </tr>
                        </thead>                        
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaDM</td>
                                    <td>@item.TenDM</td>
                                    <td>@item.Ngaytao</td>
                                    <td><a href="@Url.Action("Edit","CategoryProduct",new { madm=item.MaDM})"><img src="~/Areas/AssetAdmin/img/anhedit24.png"></a></td>
                                    <td><a href="@Url.Action("Delete","CategoryProduct",new { madm=item.MaDM})"><img src="~/Areas/AssetAdmin/img/2530784-24.png"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

</div>
<!-- /.container-fluid -->