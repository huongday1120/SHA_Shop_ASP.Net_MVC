@model SHA_Shop.Areas.Admin.Models.CreateCategoryProductFormModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">THÊM SẢN PHẨM MỚI</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">NHẬP SẢN PHẨM</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="col-lg-6">

                    @using (Html.BeginForm("Create", "CategoryProduct", FormMethod.Post)) //<form class='user'>
                    {
                        <div class="form-group">
                            <label>Mã Danh Mục</label>
                            @*<input class="form-control" type="text" placeholder="Mã Danh Mục">*@
                            @Html.TextBoxFor(m => m.MaDM, new { @class = "form-control", placehover = "Mã Danh Mục" })
                            @Html.ValidationMessageFor(m => m.MaDM)
                        </div>

                        <div class="form-group">
                            <label>Tên Danh Mục</label>
                            @*<input class="form-control" type="text" placeholder="Tên Danh Mục">*@
                            @Html.TextBoxFor(m => m.TenDM, new { @class = "form-control", placehover = "Tên Danh Mục" })
                            @Html.ValidationMessageFor(m => m.TenDM)
                        </div>                       

                        <a href="@Url.Action("Index","CategoryProduct")" class="btn btn-primary">Quay lại Danh sách</a>
                        <button type="submit" class="btn btn-primary">Tạo Mới</button>
                        @Html.ValidationMessage("save_error")
                    }
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    </div>