@model SHA_Shop.Areas.Admin.Models.EditCategoryProductFormModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">CHỈNH SỬA DANH MỤC</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">CHỈNH SỬA</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="col-lg-6">

                    @using (Html.BeginForm("Edit", "CategoryProduct", FormMethod.Post)) //<form class='user'>
                    {
                        <div class="form-group">
                            <label>Mã Danh Mục</label>
                            @*<input class="form-control" type="text" placeholder="Mã Danh Mục">*@
                            @Html.TextBoxFor(m => m.MaDM, new { @readonly = true, @class = "form-control", placehover = "Mã Danh Mục" })
                        </div>

                        <div class="form-group">
                            <label>Tên Danh Mục</label>
                            @*<input class="form-control" type="text" placeholder="Tên Danh Mục">*@
                            @Html.TextBoxFor(m => m.TenDM, new { @class = "form-control", placehover = "Tên Danh Mục" })
                        </div>

                        <a href="@Url.Action("Index","CategoryProduct")" class="btn btn-default">Quay lại danh sách</a>
                        <button type="submit" class="btn btn-primary">Chỉnh Sửa</button>

                    }
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
