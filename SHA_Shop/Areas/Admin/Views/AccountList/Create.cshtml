@model SHA_Shop.Areas.Admin.Models.CreateAccountListFormModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">THÊM MỚI NGƯỜI DÙNG</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">NHẬP THÔNG TIN NGƯỜI DÙNG</h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <div class="col-lg-6">

                    @using (Html.BeginForm("Create", "AccountList", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>ID Người Dùng</label>
                            @*<input class="form-control" type="text" placeholder="Tài khoản">*@
                            @Html.TextBoxFor(m => m.IDNguoiDung, new { @class = "form-control", placeholder = "ID" })
                            @Html.ValidationMessageFor(m => m.IDNguoiDung)
                        </div>

                        <div class="form-group">
                            <label>Tài Khoản</label>
                            @Html.TextBoxFor(m => m.TaiKhoan, new { @class = "form-control", placeholder = "Tài Khoản" })
                            @Html.ValidationMessageFor(m => m.TaiKhoan)
                        </div>

                        <div class="form-group">
                            <label>Mật Khẩu</label>
                            @Html.TextBoxFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Mật Khẩu" })
                            @Html.ValidationMessageFor(m => m.MatKhau)
                        </div>

                        <div class="form-group">
                            <label> Nhập Lại Mật Khẩu</label>
                            @Html.TextBoxFor(m => m.NhapLaiMatKhau, new { @class = "form-control", placeholder = "Nhập Lại Mật Khẩu" })
                            @Html.ValidationMessageFor(m => m.NhapLaiMatKhau)
                        </div>

                        <div class="form-group">
                            <label>Họ tên</label>
                            @Html.TextBoxFor(m => m.Ten, new { @class = "form-control", placeholder = "Tên" })
                            @Html.ValidationMessageFor(m => m.Ten)
                        </div>

                        <div class="form-group">
                            <label>Địa chỉ</label>
                            @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Địa Chỉ" })
                            @Html.ValidationMessageFor(m => m.DiaChi)
                        </div>

                        <div class="form-group">
                            <label>Số điện thoại</label>
                            @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", placeholder = "Số Điện Thoại" })
                            @Html.ValidationMessageFor(m => m.SDT)
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>

                        <a href="@Url.Action("Index","AccountList")" class="btn btn-primary">Quay lại Danh sách</a>
                        <button type="submit" class="btn btn-primary">Tạo Mới</button>
                        @Html.ValidationMessage("save_error")
                    }
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>