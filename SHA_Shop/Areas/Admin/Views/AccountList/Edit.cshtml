@model SHA_Shop.Areas.Admin.Models.EditAccountListFormModel
@{
        ViewBag.Title = "Edit";
        Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}


    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">CHỈNH SỬA TÀI KHOẢN</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">CHỈNH SỬA</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="col-lg-6">

                        @using (Html.BeginForm("Edit", "AccountList", FormMethod.Post)) //<form class='user'>
                        {
                            <div class="form-group">
                                <label>ID Người Dùng</label>
                                @Html.TextBoxFor(m => m.IDNguoiDung, new { @class = "form-control", placehover = "ID Người Dùng" })
                            </div>

                            <div class="form-group">
                                <label>Tài Khoản</label>
                                @Html.TextBoxFor(m => m.TaiKhoan, new { @class = "form-control", placehover = "Tài khoản" })
                            </div>

                            <div class="form-group">
                                <label>Tên</label>
                                @Html.TextBoxFor(m => m.Ten, new { @class = "form-control", placehover = "Tên" })
                            </div>

                            <div class="form-group">
                                <label>Địa Chỉ</label>
                                @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placehover = "Địa chỉ" })
                            </div>

                            <div class="form-group">
                                <label>Số Điện Thoại</label>
                                @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", placehover = "Số điện thoại" })
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placehover = "Email" })
                            </div>

                            <a href="@Url.Action("Index","AccountList")" class="btn btn-default">Quay lại danh sách</a>
                            <button type="submit" class="btn btn-primary">Chỉnh Sửa</button>

                        }
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->
    </div>
