@model SHA_Shop.Areas.Admin.Models.UserLogin
@{
    Layout = "~/Areas/Admin/Views/Shared/_EmptyLayout.cshtml";
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "user" })) //<form class='user'>
                                {
                                    @Html.HiddenFor(m=>m.ReturnUrl)
                                    <div class="form-group">
                                        @*<input type="text" class="form-control form-control-user"
                id="exampleInputEmail" aria-describedby="emailHelp"
                placeholder="Tài khoản">*@
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-user", placeholder = "Tài khoản" })
                                        @Html.ValidationMessageFor(x => x.Username)
                                    </div>
                                    <div class="form-group">
                                        @*<input type="password" class="form-control form-control-user"
        id="exampleInputPassword" placeholder="Mật khẩu">*@
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", placeholder = "Mật khẩu" })
                                        @Html.ValidationMessageFor(x => x.Password)
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        ĐĂNG NHẬP
                                    </button>
                                    //</form>
                                }

                                <hr>
                                <div class="text-center">
                                    <a class="small" href="forgot-password.html">Quên mật khẩu</a>
                                </div>

                                @Html.ValidationMessage("invalid_account")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
