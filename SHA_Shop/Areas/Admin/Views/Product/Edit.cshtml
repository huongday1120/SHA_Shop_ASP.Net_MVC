@model SHA_Shop.Areas.Admin.Models.EditProductFormModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">CHỈNH SỬA SẢN PHẨM</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">CHỈNH SỬA</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="col-lg-6">

                    @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" })) //<form class='user'>
                    {

                        <div class="form-group">
                            <label>Mã sản phẩm</label>
                            @Html.TextBoxFor(m => m.MaSP, new { @class = "form-control", placehover = "Mã sản phẩm" })
                        </div>

                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control", placehover = "Tên sản phẩm" })
                        </div>

                        <div class="form-group">
                            <label>Ảnh trước đó</label>
                            <img style="width:200px; height:250px;" src="@Model.hinhCu" />
                        </div>
                        <div class="form-group">
                            <label>Chọn thư mục Ảnh</label>
                            <input type="file" name="ProductImage" required />
                        </div>

                        <div class="form-group">
                            <label>Mô tả</label>
                            @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", placehover = "Mô tả" })
                        </div>

                        <div class="form-group">
                            <label>Chi tiết</label>
                            @Html.TextAreaFor(m => m.ChiTiet, new { @class = "form-control", placehover = "Chi tiết" })
                        </div>

                        <div class="form-group">
                            <label>Giá sản phẩm</label>
                            @Html.TextBoxFor(m => m.GiaSP, new { @class = "form-control", placehover = "Giá sản phẩm" })
                        </div>

                        <div class="form-group">
                            <label>Số lượng</label>
                            @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control", placehover = "Số lượng" })
                        </div>

                        <div class="form-group">
                            <label>Mã danh mục</label>
                            @Html.TextBoxFor(m => m.MaDM, new { @class = "form-control", placehover = "Mã danh mục " })
                        </div>

                        <a href="@Url.Action("Index","Product")" class="btn btn-default">Quay lại danh sách</a>
                        <button type="submit" class="btn btn-primary">Chỉnh Sửa</button>

                    }
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
